{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mission-control.local/schemas/ideas.schema.json",
  "title": "Ideas and Notes",
  "description": "Schema for storing ideas, notes, and thoughts for future reference with Kanban pipeline support",
  "type": "object",
  "required": ["ideas"],
  "properties": {
    "ideas": {
      "type": "array",
      "description": "Array of idea/note entries",
      "items": { "$ref": "#/definitions/idea" }
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "When ideas were last modified"
    }
  },
  "definitions": {
    "idea": {
      "type": "object",
      "required": ["id", "title", "category", "status", "created_date"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the idea"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Short title summarizing the idea"
        },
        "category": {
          "type": "string",
          "enum": ["Trading", "Automation", "Tech", "Personal"],
          "description": "Category for organizing ideas"
        },
        "effort": {
          "type": "string",
          "enum": ["Quick", "Medium", "Big"],
          "description": "Estimated effort level to implement the idea"
        },
        "status": {
          "type": "string",
          "enum": ["backlog", "discussing", "approved", "in_progress", "done"],
          "default": "backlog",
          "description": "Current status in the Kanban pipeline"
        },
        "source": {
          "type": "string",
          "enum": ["conversation", "AI-suggested", "user-added"],
          "description": "Origin of the idea"
        },
        "context": {
          "type": "string",
          "maxLength": 1000,
          "description": "How the idea originated - background and circumstances"
        },
        "your_notes": {
          "type": "string",
          "maxLength": 2000,
          "description": "User's notes and thoughts about the idea"
        },
        "my_analysis": {
          "type": "string",
          "maxLength": 2000,
          "description": "AI analysis, insights, or recommendations about the idea"
        },
        "created_date": {
          "type": "string",
          "format": "date-time",
          "description": "When the idea was first recorded"
        },
        "ai_generated": {
          "type": "boolean",
          "default": false,
          "description": "Whether this idea was generated by AI"
        },
        "priority": {
          "type": "string",
          "enum": ["low", "normal", "high"],
          "default": "normal",
          "description": "Priority level for the idea"
        },
        "tags": {
          "type": "array",
          "description": "Tags for cross-referencing and search",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$",
            "maxLength": 30
          }
        },
        "related_ideas": {
          "type": "array",
          "description": "IDs of related ideas",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}